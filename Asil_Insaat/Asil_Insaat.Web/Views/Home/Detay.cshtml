@model List<YaziViewModel>


<div class="page-heading header-text">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <span class="breadcrumb"><a href="#">Çalışma</a> Alanlarımız </span>
                <h3>Yalıtım</h3>
            </div>
        </div>
    </div>
</div>

<div class="section properties">
    <div class="container">


        <div class="row properties-box">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 align-self-center mb-30 properties-items col-md-6 adv">
                    <div class="item">

                        <a asp-controller="Home" asp-action="Incele" asp-route-id="@item.Id"><img class="" src="~/images/@item.Resim.FileName" style="height:245px;" alt=""></a>
                    
                        <h4 style="color:orange;" >@item.Baslik</h4>
                        <ul>
                            <li> @(item.Icerik.Length > 80 ? item.Icerik.Substring(0, 80) : item.Icerik) </li>
                        </ul>
                        <div class="main-button">
                            <a asp-controller="Home" asp-action="Incele" asp-route-id="@item.Id" >İncele</a>
                        </div>

                    </div>
                </div>
            }

        </div>

    </div>
</div>


