        <div class="preloader-inner">
            <span class="dot"></span>
            <div class="dots">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->

    <div class="sub-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-8">
                    <ul class="info">
                        <li><i class="fa fa-envelope"></i><a href="mailto:asilinsaatyapiyalitim@gmail.com" style="color:black;">asilinsaatyapiyalitim@gmail.com</a> </li>
                        <li><i class="fa fa-phone"></i><a href="tel:05322251249" style="color:black;">0(532) 225 12 49</a>  </li>
                    </ul>
                </div>
                <div class="col-lg-4 col-md-4">
                    <ul class="social-links">
                        <li><a href="#"><i class="fab fa-facebook"></i></a></li>
                        <li><a href="https://www.instagram.com/asilinsaatelazig/" target="_blank"><i class="fab fa-instagram"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- ***** Header Area Start ***** -->
    <header class="header-area header-sticky" style="background-color:#FFDE59;">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav class="main-nav">
                        <!-- ***** Logo Start ***** -->
                        <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                            <div class="left-image">
                                <img src="~/AsilSite/assets/images/asillogo.png" alt="" style="padding: 8px;">

                            </div>
                        </a>
                        <!-- ***** Logo End ***** -->
                        <!-- ***** Menu Start ***** -->
                        <ul class="nav">

                            <li><a class="navbar-brand" asp-controller="Home" asp-action="Index"></i> Anasayfa</a></li>
                            <li><a class="navbar-brand" asp-controller="Home" asp-action="Hakkimizda">Hakkımızda</a></li>
                            <li><a class="navbar-brand" asp-controller="Home" asp-action="Detay" >Çalışma Alanlarımız</a></li>
                            <li><a class="navbar-brand" asp-controller="Home" asp-action="Referans" >Referanslarımız</a></li>
                            <li><a asp-controller="Home" asp-action="Iletisim"><i class="fa fa-phone"></i> bize Ulaşın!</a></li>
                        </ul>
                        <a class='menu-trigger'>
                            <span>Menu</span>
                        </a>
                        <!-- ***** Menu End ***** -->
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ***** Header Area End ***** -->
    @RenderBody()


    <footer>
        <div class="container">
            <div class="col-lg-8">
                <p>
