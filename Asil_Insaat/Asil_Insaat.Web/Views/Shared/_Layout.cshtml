    <link rel="stylesheet" href="~/Asil_Insaat.Web.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/AsilSite/assets/favicon/AsilIcon.ico" />
    <!-- Additional CSS Files -->
    <link rel="stylesheet" href="~/AsilSite/assets/css/fontawesome.css">
    <link rel="stylesheet" href="~/AsilSite/assets/css/templatemo-villa-agency.css">
    <link rel="stylesheet" href="~/AsilSite/assets/css/owl.css">
