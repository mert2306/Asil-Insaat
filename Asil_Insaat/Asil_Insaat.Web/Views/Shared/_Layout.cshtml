                </p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/AsilSite/vendor/jquery/jquery.min.js"></script>
    <script src="~/AsilSite/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/AsilSite/assets/js/isotope.min.js"></script>
    <script src="~/AsilSite/assets/js/owl-carousel.js"></script>
    <script src="~/AsilSite/assets/js/counter.js"></script>
    <script src="~/AsilSite/assets/js/custom.js"></script>

</body>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>




@await RenderSectionAsync("Scripts", required: false)
</html>
